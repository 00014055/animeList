extends layout.pug

block content
	h1.logo New anime

	.section
		form.form(action="/create", method="POST")
			label.label Name
			input.input(type="text", name="name")

			label.label Date
			input.input(type="text", name="date")

			label.label Type
			input.input(type="text", name="type")

			label.label Genres
			input.input(type="text", name="genres")

			label.label Episodes
			input.input(type="text", name="episodes")

			label.label Comment
			input.input(type="text", name="comment")

			button.input.btn Add new anime to list

